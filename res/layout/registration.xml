<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scrollView1"
android:layout_width="match_parent"
android:layout_height="match_parent" 
android:fillViewport="true" 
android:isScrollContainer="true"
android:scrollbars="vertical"
android:scrollbarStyle="outsideInset"
android:background="#141517">

		<LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
		    <EditText
        	android:id="@+id/run"
        	android:layout_width="250dp"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:layout_marginTop="30dp" 
        	android:background="@drawable/textstyle" 
        	android:inputType="text" 
        	android:hint="@string/UserName" 
        	android:textColorHint="#545454" 
        	android:paddingLeft="30dp" 
        	android:paddingRight="10dp" 
        	android:paddingTop="10dp" 
        	android:paddingBottom="10dp">
        	<requestFocus />
    		</EditText>
    		
		    <EditText
        	android:id="@+id/rname"
        	android:layout_width="250dp"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:layout_marginTop="20dp"
        	android:background="@drawable/textstyle"
        	android:hint="@string/Name"
        	android:inputType="text"
        	android:textColorHint="#545454" android:paddingLeft="30dp" android:paddingBottom="10dp" android:paddingRight="10dp" android:paddingTop="10dp"/>
		    
		    <EditText
        	android:id="@+id/remail"
        	android:layout_width="250dp"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:layout_marginTop="20dp"
        	android:background="@drawable/textstyle"
        	android:hint="@string/Email"
        	android:inputType="textEmailAddress"
        	android:textColorHint="#545454" android:paddingLeft="30dp" android:paddingBottom="10dp" android:paddingRight="10dp" android:paddingTop="10dp"/>
		    
		    <EditText
        	android:id="@+id/rpass"
        	android:layout_width="250dp"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:layout_marginTop="20dp"
        	android:background="@drawable/textstyle"
        	android:hint="@string/Password"
        	android:inputType="text|textPassword"
        	android:textColorHint="#545454" android:paddingLeft="30dp" android:paddingBottom="10dp" android:paddingRight="10dp" android:paddingTop="10dp"/>
		    
		    <EditText
        	android:id="@+id/rmob"
        	android:layout_width="250dp"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:layout_marginTop="20dp"
        	android:background="@drawable/textstyle"
        	android:hint="@string/Mobile"
        	android:inputType="text|phone"
        	android:textColorHint="#545454" android:paddingLeft="30dp" android:paddingBottom="10dp" android:paddingRight="10dp" android:paddingTop="10dp"/>
			
		    <Button
		        android:id="@+id/regbtn"
		        android:layout_width="120dp"
		        android:layout_height="45dp"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/buttonstyle"
		        android:padding="10dp"
		        android:text="@string/Register"
		        android:textColor="#3b4e11"
		        android:textSize="18sp"
		        android:textStyle="bold" />

       	</LinearLayout>
        
    </ScrollView>

